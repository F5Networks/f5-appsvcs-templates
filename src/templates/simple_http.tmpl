<title>
Simple HTTP
</title>

<description>
The simplest example of an HTTP server load balanced to other servers at port 80.
</description>

<declaration>
{
  "class": "AS3",
  "action": "deploy",
  "persist": true,
  "declaration": {
    "class": "ADC",
    "schemaVersion": "3.0.0",
    "id": "0123-4567-8910",
    "label": "Sample 1",
    "remark": "Basic HTTP with Monitor",
    "{{tenant_name::Tenant1}}": {
      "class": "Tenant",
      "{{application_name::App1}}": {
        "class": "Application",
        "template": "http",
        "serviceMain": {
          "class": "{{service_type:dropdown_menu:Service_HTTP}}",
          "virtualAddresses": ["{{virtual_address::10.1.1.1}}"],
          "pool": "web_pool",
          "enable": {{enable:yesno_buttons:true}}
        },
        "web_pool": {
          "class": "Pool",
          "monitors": [
            "http"
          ],
          "members": [
            {
              "servicePort": 80,
              "serverAddresses": {{server_addresses:ip_array}}
            }
          ]
        }
      }
    }
  }
}
</declaration>